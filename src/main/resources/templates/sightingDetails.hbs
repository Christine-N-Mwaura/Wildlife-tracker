{{#partial "content"}}
    {{#if animals}}
        <div class="container">
            <div class="row">
                <h3>Available Animals</h3>
                <div class="container">
                    <table class="table table-dark">
                        <tbody>
                        {{#each sightings}}
                            <tr>
                                <td><span></span>{{id}}</td>
                                <td> Animal Name: <span></span>{{name}}</td>
                                <td> Animal Health: <span></span>{{health}}</td>
                                <td> Animal type: <span></span>{{type}}</td>
                                <td> Animal Age: <span></span>{{age}}</td>
                                <td> Time Sighted: <span></span>{{time_sighted}}</td>

                            </tr>

                        {{/each}}
                        </tbody>
                    </table>


                </div>
            </div>

        </div>









    {{/if}}






{{/partial}}






{{>layout.hbs}}