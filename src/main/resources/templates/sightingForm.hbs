{{#partial "content"}}
    <div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
    <div class="wrapper wrapper--w780">
    <div class="card card-3">
        <div class="card-heading"></div>
            <div class="card-body">
                <h2 class="title">Animal Sighting Info</h2>
                <form action="/new/sighting" method="POST">
                    <div class="input-group">
                        <label for="rangerName">Ranger Name</label>
                        <select class="form-control" id="rangerName" name="rangerName">
                            {{#each rangers}}
                                <option  value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="input-group">
                        <label for="rangerName">Location Name</label>
                        <select class="form-control" id="locationName" name="locationName">
                            {{#each locations}}
                            <option  value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
<!--                       <input id="location" class="input--style-3" type="text" placeholder="Animal" name="animal">-->
                    </div>
                    <div class="input-group">
                        <label for="animalId">Animal Sighted</label>
                        <select class="form-control" name="animalId" id="animalId">
                            {{#each animals}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>
<!--                        <input id="location" class="input--style-3" type="text" placeholder="Animal" name="animal">-->
                    </div>
                    <div class="p-t-10">
                        <button class="btn btn--pill btn--green" type="submit">Submit</button><br><br>
                        <a href="/new/animal">Add new animal</a>
                    </div>
                 </form>
            </div>
    </div>
    </div>
    </div>


{{/partial}}



















